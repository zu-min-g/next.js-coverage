{
  "name": "my-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "install": "playwright install --with-deps chromium",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test-watch": "jest watch",
    "test": "run-s test:*",
    "test:clean": "rimraf coverage coverage-merged",
    "test:unit": "run-s test:unit:*",
    "test:unit:run": "jest",
    "test:server": "run-s test:server:*",
    "test:server:clean": "rimraf .next .nyc_output",
    "test:server:build": "cross-env NODE_ENV=test ENABLE_COVERAGE_INSTRUMENT=true next build",
    "test:server:run": "cross-env NODE_ENV=test ENABLE_COVERAGE_INSTRUMENT=true nyc --report-dir coverage/server playwright test",
    "test:client": "run-s test:client:*",
    "test:client:clean": "rimraf .next .nyc_output",
    "test:client:build": "cross-env NODE_ENV=test next build",
    "test:client:build:start": "cross-env NODE_ENV=test next start",
    "test:client:run": "cross-env NODE_ENV=test ENABLE_CLIENT_COVERAGE=true playwright test",
    "test:client:report": "nyc report --report-dir coverage/client",
    "test:copy-cov": "node copy-cov.js",
    "test:merge-cov": "nyc merge coverage/work coverage/merged/coverage-final.json",
    "test:report-cov": "nyc report -t coverage/merged --report-dir coverage/merged --reporter=cobertura --reporter=text",
    "clean": "rimraf .next .swc coverage .nyc_output"
  },
  "dependencies": {
    "next": "^13.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.28.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/convert-source-map": "^1.5.2",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "convert-source-map": "^2.0.0",
    "cross-env": "^7.0.3",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "swc-plugin-coverage-instrument": "^0.0.14",
    "typescript": "4.8.4"
  }
}